<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="flower_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/flower_bottom</item>
    </style>

    <style name="shado_back">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">-20dp</item>
        <item name="android:layout_marginStart">-20dp</item>
        <item name="android:layout_marginTop">-12dp</item>
        <item name="android:background">@drawable/shado_back</item>
    </style>

    <style name="MobileNo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">-8dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">start</item>
        <item name="android:inputType">number</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_light</item>
    </style>

    <style name="View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">#F6F6F6</item>
    </style>

    <style name="Password">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">start</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/sf_pro_text_light</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Forget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:fontFamily">@font/sf_pro_text_light</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="NewUser">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:fontFamily">@font/sf_pro_text_light</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="btnSign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">21dp</item>
        <item name="android:layout_marginStart">21dp</item>
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:background">@drawable/back_btn_sign</item>
        <item name="android:textColor">@android:color/white</item>
    </style>



    <style name="btnImgFB">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>

        <item name="android:background">@color/colorFace</item>
    </style>

    <style name="ImgGoogle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">21dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/google_pus_color</item>
    </style>

    <style name="Skip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">21dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="logo_sign">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">130dp</item>
        <item name="android:background">@drawable/logo_sign</item>
    </style>

    <style name="acount_radio_tap">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="edit_person">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_acount_shape</item>
        <item name="android:paddingStart">15sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">15sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>

        <item name="android:textColorHint">#D4D6D8</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">10dp</item>

    </style>

</resources>
